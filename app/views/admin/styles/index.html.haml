.outset
  %table.index
    %thead
      %tr
        %th.name Stylesheet
        %th.actions{:style=>"width:9em;"} Modify
    %tbody
      - unless models.blank?
        - models.each do |stylesheet|
          %tr
            %td.name
              = image('stylesheet') 
              = link_to stylesheet.title, edit_admin_style_path(stylesheet)
            %td.actions= link_to image('minus') + ' ' + t('remove'), remove_admin_style_url(stylesheet), :class => "action"
      - else
        %tr
          %td.empty{:colspan => 2} No stylesheets

#actions
  = pagination_for(models)
  %ul
    %li= link_to image('plus') + " " + t("new_stylesheet"), new_admin_style_path
